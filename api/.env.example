BCRYPT_SALT_ROUNDS=12
BCRYPT_PEPPER=your_optional_pepper_string_here

# ========================================
# SECURITY - GENERAL
# ========================================
DB_INIT_KEY=your_db_init_secret_key_for_database_reset

